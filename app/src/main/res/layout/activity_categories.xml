<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classes.ActivityC.Categories">

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="274dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/choose"
        android:textColor="#3F51B5"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/first_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/todo"
        android:onClick="onCardioClicked"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/second_exercise"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardio2"
        tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/second_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/todo"
        android:onClick="onHeavyLiftingClicked"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/first_exercise"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heavylifting2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/third_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/todo"
        android:onClick="onCalistheticsClicked"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/fourth_exercise"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_exercise"
        app:srcCompat="@drawable/calisthenics2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/fourth_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/todo"
        android:onClick="onStretchesClicked"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/third_exercise"
        app:layout_constraintTop_toBottomOf="@+id/second_exercise"
        app:srcCompat="@drawable/stretching2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:visibility="gone"
        android:id="@+id/first_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/cardio2"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/first_exercise"
        app:layout_constraintEnd_toEndOf="@+id/first_exercise"
        app:layout_constraintStart_toStartOf="@+id/first_exercise" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/lifting2"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/second_exercise"
        app:layout_constraintEnd_toEndOf="@+id/second_exercise"
        app:layout_constraintStart_toStartOf="@+id/second_exercise" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/Calisthenics2"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/third_exercise"
        app:layout_constraintEnd_toEndOf="@+id/third_exercise"
        app:layout_constraintStart_toStartOf="@+id/third_exercise" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/Streches2"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/fourth_exercise"
        app:layout_constraintEnd_toEndOf="@+id/fourth_exercise"
        app:layout_constraintStart_toStartOf="@+id/fourth_exercise" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxWidth="274dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourth_exercise" />

</androidx.constraintlayout.widget.ConstraintLayout>